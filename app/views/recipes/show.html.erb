<h1><%= @recipe.title %></h1>
<h3><%= t('recipes.show.details') %></h3>
<p><%= @recipe.recipe_type.name %></p>
<p><%= @recipe.cuisine.name %></p>
<p><%= @recipe.difficulty %></p>
<p><%= @recipe.cook_time %> minutos</p>
<h3><%= t('activerecord.attributes.recipe.ingredients') %></h3>
<p><%= @recipe.ingredients %></p>
<h3><%= t('activerecord.attributes.recipe.cook_method') %></h3>
<p><%= @recipe.cook_method %></p>
<%= image_tag @recipe.photo.url %>

<% if user_present(current_user).can_edit(@recipe) %>
  <%= link_to t('recipes.show.edit'), edit_recipe_path(@recipe.id) %>
<% end %>
<%= link_to t('recipes.show.go_back'), :root %>