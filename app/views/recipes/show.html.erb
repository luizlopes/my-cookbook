<h1><%= @recipe.title %></h1>
<h3>Detalhes</h3>
<p><%= @recipe.recipe_type.name %></p>
<p><%= @recipe.cuisine.name %></p>
<p><%= @recipe.difficulty %></p>
<p><%= @recipe.cook_time %> minutos</p>
<h3>Ingredientes</h3>
<p><%= @recipe.ingredients %></p>
<h3>Como Preparar</h3>
<p><%= @recipe.cook_method %></p>
<%= image_tag @recipe.photo.url %>

<% if @recipe.user.eql? current_user %>
  <%= link_to "Editar", edit_recipe_path(@recipe.id) %>
<% end %>
<%= link_to "Voltar", :root %>