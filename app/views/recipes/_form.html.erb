<p><%= flash[:error] %></p>

<%= form_for(@recipe, html: { multipart: true }) do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :recipe_type_id %>
    <%= f.collection_select :recipe_type_id, @recipe_types, :id, :name %>
  </div>
  <div>
    <%= f.label :cuisine_id %>
    <%= f.collection_select :cuisine_id, @cuisines, :id, :name %>
  </div>
  <div>
    <%= f.label :difficulty %>
    <%= f.text_field :difficulty %>
  </div>
  <div>
    <%= f.label :cook_time %>
    <%= f.number_field :cook_time %>
  </div>
  <div>
    <%= f.label :ingredients %>
    <%= f.text_field :ingredients %>
  </div>
  <div>
    <%= f.label :cook_method %>
    <%= f.text_field :cook_method %>
  </div>
  <div>
    <%= f.label :photo %>
    <%= f.file_field :photo %>
  </div>
  <div>
    <%= f.submit t('recipes.edit.send') %>
  </div>
<% end %>