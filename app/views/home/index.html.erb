<% if user_signed_in? %>
  <div>Ol√° <%= current_user.email %> | <%= link_to 'Minhas receitas', user_recipes_path(current_user) %> | <%= link_to 'Sair', destroy_user_session_path, method: :delete %></div>
<% else %>
  <%= link_to 'Entrar', new_user_session_path %>
<% end %>

<h1>CookBook do LUIZ LOPES</h1>
<p>Bem-vindo ao maior livro de receitas online</p>

<div>
  <%= form_tag("/search", method: "get") do %>
    <%= label_tag :title, "Buscar por" %>
    <%= text_field_tag :title %>
    <%= submit_tag "Buscar" %>
  <% end %>

<h3>Cozinhas</h3>
<ul>
  <% @cuisines.each do |cuisine| %>
    <li><%= link_to cuisine.name, cuisine %></li>
  <% end %>
</ul>

<h3>Tipos de receitas</h3>
<ul>
<% @recipe_types.each do |recipe_type| %>
  <li><%= link_to recipe_type.name, recipe_type %></li>
<% end %>
</ul>

<% if @recipes.empty? %>
  <p>Nenhuma receita encontrada</p>
<% end %>

<%= render @recipes %>

<%= link_to "Enviar uma receita", new_recipe_url %>